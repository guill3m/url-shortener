{
  "extends": [
    "standard",
    "standard-jsx",
    "standard-react",
    "next/core-web-vitals"
  ],
  "globals": {
    "global": false
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ]
  }
}
